{
  "name": "paper-editor",
  "version": "0.9.0",
  "main": "main.js",
  "author": {
    "name": "Gernot Vormayr",
    "email": "gernot.vormayr@nt.tuwien.ac.at"
  },
  "license": "gpl",
  "homepage": "https://github.com/dcferreira/nta-meta-analysis",
  "build": {
    "appId": "com.cn.paper-editor",
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "target": "zip"
    }
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "jquery": "^3.2.1",
    "json-editor": "github:notti/json-editor"
  },
  "devDependencies": {
    "electron": "^1.6.10",
    "electron-builder": "^18.6.2"
  },
  "scripts": {
    "start": "electron .",
    "dist": "git log -n 1 --format='%H' ../schema_v2.json > commit.txt && build --mac --win --linux --x64"
  }
}
