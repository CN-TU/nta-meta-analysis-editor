{
  "name": "paper-editor",
  "version": "1.1.0",
  "main": "main.js",
  "author": {
    "name": "Gernot Vormayr",
    "email": "gernot.vormayr@nt.tuwien.ac.at"
  },
  "description": "Editor for NTARC dataset files.",
  "bugs": "https://github.com/CN-TU/nta-meta-analysis-editor/issues",
  "license": "GPL-3.0+",
  "homepage": "https://github.com/CN-TU/nta-meta-analysis-editor",
  "repository": {
    "type": "git",
    "url": "https://github.com/CN-TU/nta-meta-analysis-editor"
  },
  "build": {
    "appId": "com.cn.paper-editor",
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "target": "zip"
    }
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "jquery": "^3.3.1",
    "json-editor": "github:notti/json-editor"
  },
  "devDependencies": {
    "electron": "^1.8.2",
    "electron-builder": "^18.8.1"
  },
  "scripts": {
    "start": "electron .",
    "dist": "build --mac --win --linux --x64"
  }
}
