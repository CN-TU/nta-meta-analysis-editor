{
  "name": "paper-editor",
  "version": "2.0.0",
  "private": true,
  "author": {
    "name": "Gernot Vormayr",
    "email": "gernot.vormayr@nt.tuwien.ac.at"
  },
  "description": "Editor for NTARC dataset files.",
  "bugs": "https://github.com/CN-TU/nta-meta-analysis-editor/issues",
  "license": "GPL-3.0+",
  "homepage": "./",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/CN-TU/nta-meta-analysis-editor"
  },
  "build": {
    "appId": "com.cn.paper-editor",
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "target": "zip"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/._*",
      "!.editorconfig",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.gitignore,.gitattributes,.flowconfig,.yarn-metadata.json,.idea,.vs,appveyor.yml,.travis.yml,circle.yml,npm-debug.log,.nyc_output,yarn.lock,.yarn-integrity}",
      "!node_modules/{ace-builds,json-editor,jquery,bootstrap}/*",
      "!node_modules/{ace-builds,json-editor,jquery,bootstrap}/**/*",
      "node_modules/ace-builds/src-min-noconflict/*",
      "node_modules/{json-editor,jquery}/dist/*.min.js",
      "node_modules/bootstrap/dist/fonts/*",
      "node_modules/bootstrap/dist/{css,js}/*.min.*",
      "!*.pegjs",
      "!life.js",
      "!test.js",
      "!update_files.js",
      "!Readme.md"
    ]
  },
  "dependencies": {
    "download-tarball": "^1.1.0",
    "electron": "^1.8.2",
    "rjson-editor": "file:../../projects/rjson-editor"
  },
  "devDependencies": {
    "@heroku/foreman": "github:heroku/node-foreman",
    "bootstrap": "^4.0.0",
    "brace": "^0.11.1",
    "electron-builder": "^20.0.5",
    "open-iconic": "^1.1.1",
    "pegjs": "^0.10.0",
    "react": "^16.3.1",
    "react-dnd": "^2.6.0",
    "react-dnd-html5-backend": "^2.6.0",
    "react-dom": "^16.3.1",
    "react-feather": "^1.1.0",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "electron": "electron .",
    "dev": "nf start",
    "dist": "build --mac --win --linux --x64",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  }
}
